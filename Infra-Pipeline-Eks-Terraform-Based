
pipeline{
    agent {
         docker {
            image 'jenkins/agent'  // Specify the Docker image you want to use
            label 'docker-label'        // Optionally specify the label of the Docker agent template
        }
     }
    stages {
        stage('Checkout from Git'){
            steps{
                git branch: 'main', url: 'https://github.com/veeresh-111/Amazon-FE.git'
            }
        }
        stage('Terraform version'){
             steps{
                 sh 'terraform --version'
             }
        }
        stage('Terraform init'){
             steps{
                 dir('EKS') {
                      sh 'terraform init'
                   }
             }
        }
        stage('Terraform validate'){
             steps{
                 dir('EKS') {
                      sh 'terraform validate'
                   }
             }
        }
        stage('Terraform plan'){
             steps{
                 dir('EKS') {
                      sh 'terraform plan'
                   }
             }
        }
        stage('Terraform apply/destroy'){
             steps{
                 dir('EKS') {
                      sh 'terraform ${action} --auto-approve'
                   }
             }
        }
    }
}
